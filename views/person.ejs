<%- include('./partials/head') %>

<a href="/">Back</a>

<article class="personDetail">
    <h2><%= person.name %></h2>
    <div>
        <img src="<%= person.avatar.includes('https') ? person.avatar : '/assets/person.png' %>">
        <div>
            <p>Squad: <%= person.squad_id %>
            <p><%= person.bio %></p>   
        </div>
    </div>
</article>

<section class="commentSection">
    <h2>Comments</h2>
    <ul>
        <% messages.forEach(message => { %>
            <li> <%= message.name %> <%= message.text %></li>
        <% }) %>
    </ul>

    <form method="POST" action="/person/<%= person.id %>">
        <label for="name">
            <input type="text" id="name" name="name">
        </label>
        <label for="bericht">
            <textarea name="bericht" id="bericht" cols="30" rows="10"></textarea>
        </label>

        <button type="submit">Verstuur comment</button>
    </form>
</section>


<%- include('./partials/foot') %>